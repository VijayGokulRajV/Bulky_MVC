@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pt-2">
                    
                </div>
                <div class="border p-3">
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="Title" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Title" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="Description" class="form-control border-0 shadow" type="text" />
                        <label asp-for="Description" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="ISBN" class="form-control border-0 shadow" type="text" />
                        <label asp-for="ISBN" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="Author" class="form-control border-0 shadow" type="text" />
                        <label asp-for="Author" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="ListPrice" class="form-control border-0 shadow" type="text" />
                        <label asp-for="ListPrice" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="Price" class="form-control border-0 shadow" type="text" />
                        <label asp-for="Price" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="Price50" class="form-control border-0 shadow" type="text" />
                        <label asp-for="Price50" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input disabled asp-for="Price100" class="form-control border-0 shadow" type="text" />
                        <label asp-for="Price100" class="ms-2"></label>
                    </div>
           
                </div>
                <div class="row p-3">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-outline-danger form-control" type="submit">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

